#! /bin/bash

#DEBHELPER#

set -e

if [ "$1" = "purge" ]
then
	#Like: logpath /data00/log/atop
	ATOPRC="/etc/atoprc"
	if [ -f $ATOPRC ]; then
		RCLOGPATH=`cat $ATOPRC | grep -w '^logpath' -m 1 | awk '{print $2}'`
		if [ -n "$RCLOGPATH" ]; then
			rm -f $RCLOGPATH/atop_*
			rm -f $RCLOGPATH/daily.log
		else
			rm -rf /var/log/atop
		fi
	fi
fi

